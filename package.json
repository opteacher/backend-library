{
	"name": "backend-library",
	"version": "1.0.0",
	"description": "后台自用库，包含统一的数据库接口、模型路由、文件夹路由等。",
	"main": "index.js",
	"type": "module",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"test-dev": "cross-env NODE_ENV=dev mocha tests/**/*.test.js",
		"coverage": "nyc --reporter=text --require babel-register --all npm run test-dev",
		"cover-test": "istanbul cover npm run test-dev",
		"test": "cross-env NODE_ENV=dev nyc mocha tests/**/*.test.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://gitlab.com/opteacher/backend-library.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://gitlab.com/opteacher/backend-library/issues"
	},
	"homepage": "https://gitlab.com/opteacher/backend-library#readme",
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-plugin-istanbul": "^6.1.1",
		"babel-preset-env": "^1.7.0",
		"babel-register": "^6.26.0",
		"cross-env": "^7.0.3",
		"istanbul": "^1.0.0-alpha.2",
		"mocha": "^9.2.2",
		"mochawesome": "^7.1.2",
		"nyc": "^15.1.0"
	},
	"dependencies": {
		"lodash": "^4.17.21",
		"mongoose": "^6.2.7",
		"toml": "^3.0.0"
	},
	"nyc": {
		"require": [
			"babel-register"
		],
		"reporter": [
			"lcov",
			"text"
		],
		"sourceMap": false,
		"instrument": false
	}
}
